<div class="container" id="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <img src="./assets/burger.png" alt="Burger" />
      <h1>Eat-the-Burger</h1>
    </div>

    <div class="col-md-6 text-center">
      <form class= "devour-form">
      <input type="text" class="newBurg">
      <button type="submit" class="btn btn-primary">add new burger.</button>
      </form>
      <form>
        <h1>New Undevoured Burgers</h1>
      </form>
      {{#each this.burger_db}}
      {{#unless this.devoured}}
        <p>{{this.id}}. {{this.burger_name}}</p>
      {{/unless}}
      {{/each}}
      <button type="button" class="btn btn-warning">Devour new burger.</button>
    </div>
    <div class="col-md-6 text-center">
      <form>
        <h1>Devoured Burgers</h1>
      </form>
      <ul>
        {{#each this.burger_db}}
        {{#if this.devoured}}
          <p>{{this.id}}. {{this.burger_name}}</p>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>